{
  "name": "cosmo_info",
  "version": "2.0.0",
  "description": "CosmoDance чат-ассистент с актуальным расписанием и AI",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:watch": "nodemon --watch server.js --watch *.js --watch config/*.js server.js",
    "prod": "NODE_ENV=production node server.js",
    "prod:win": "set NODE_ENV=production&& node server.js",
    "test": "node --test test/*.test.js",
    "test:schedule": "node schedule-analyzer.js",
    "lint": "eslint server.js schedule-parser.js",
    "lint:fix": "eslint server.js schedule-parser.js --fix",
    "deploy": "npm run lint && npm test",
    "analyze": "node schedule-analyzer.js",
    "clear-cache": "node -e \"import('./schedule-parser.js').then(m => new m.default().clearCache())\"",
    "health": "curl -s http://localhost:10000/health | python -m json.tool || echo 'Сервер не запущен'"
  },
  "keywords": [
    "chatbot",
    "dance-studio",
    "ai-assistant",
    "openai",
    "cosmodance",
    "schedule-parser",
    "dance-schedule"
  ],
  "author": "CosmoDance Team <info@cosmodance.ru>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CosmoDance/Cosmo_info.git"
  },
  "bugs": {
    "url": "https://github.com/CosmoDance/Cosmo_info/issues"
  },
  "homepage": "https://cosmodance.ru",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "openai": "^4.30.0",
    "express-rate-limit": "^7.1.5",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "files": [
    "server.js",
    "schedule-parser.js",
    "config/",
    "knowledge.json",
    "index.html"
  ],
  "publishConfig": {
    "access": "public"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
